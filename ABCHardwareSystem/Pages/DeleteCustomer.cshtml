@page
@model ABCHardwareSystem.Pages.DeleteCustomerModel
@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Delete Customer";
}
<div>
    <h1>Delete Customer</h1>
    <form method="post" name="DeleteCustomerForm">
        <table>
            <tr>
                <td>
                    Select Customer:
                    <input type="text" name="CustomerListEntry" list="ItemList" />
                    <datalist id="ItemList">
                        @foreach (var customer in Model.Customers)
                        {
                            <option value="@customer.CustomerNumber">@customer.CustomerFirstName @customer.CustomerLastName</option>
                        }
                    </datalist>
                    @Html.ValidationMessage("CustomerListEntry")
                </td>
            </tr>
            <tr>
                <td>
                    <button type="submit" name="Submit" value="Find">Find</button>
                </td>
            </tr>
            <tr><td><br /></td></tr>
            @if (Model.Confirmation)
            {
                <tr>
                    <td>Customer Number:</td>
                    <td>
                        <input asp-for="CustomerNumberField" name="CustomerNumberField" value="@Model.ExistingCustomer.CustomerNumber" readonly="readonly" />
                    </td>
                </tr>
                <tr>
                    <td>First Name:</td>
                    <td>
                        <input asp-for="CustomerFirstNameField" name="CustomerFirstNameField" value="@Model.ExistingCustomer.CustomerFirstName" readonly="readonly" />
                    </td>
                </tr>
                <tr>
                    <td>Last Name:</td>
                    <td>
                        <input asp-for="CustomerLastNameField" name="CustomerLastNameField" value="@Model.ExistingCustomer.CustomerLastName" readonly="readonly" />
                    </td>
                </tr>
                <tr>
                    <td>Address:</td>
                    <td>
                        <input asp-for="CustomerAddressField" name="CustomerAddressField" value="@Model.ExistingCustomer.CustomerAddress" readonly="readonly" />
                    </td>
                </tr>
                <tr>
                    <td>City:</td>
                    <td>
                        <input asp-for="CityField" name="CityField" value="@Model.ExistingCustomer.City" readonly="readonly" />
                    </td>
                </tr>
                <tr>
                    <td>Province:</td>
                    <td>
                        <input asp-for="ProvinceField" name="ProvinceField" value="@Model.ExistingCustomer.Province" readonly="readonly" />
                    </td>
                </tr>
                <tr>
                    <td>Postal Code:</td>
                    <td>
                        <input asp-for="PostalCodeField" name="PostalCodeField" value="@Model.ExistingCustomer.PostalCode" readonly="readonly" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <button type="submit" name="Submit" value="Delete">Delete</button>
                    </td>
                </tr>
            }
        </table>
    </form>
    <br />
    @Model.Message
</div>